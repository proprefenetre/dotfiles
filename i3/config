bindsym $alt+Shift+0 move $ws0; $ws0

workspace_auto_back_and_forth yes
bindsym $alt+semicolon workspace prev
bindsym $alt+q workspace next
bindsym $alt+j workspace back_and_forth

# scratchpad
bindsym $alt+grave move scratchpad
bindsym $win+grave scratchpad show
bindsym $alt+u [instance="scratch$"] scratchpad show
for_window [instance="scratch"] move scratchpad

# assignments
assign [class="^[Cc]hromium$"] 1
assign [class="^google-chrome$"] 1
assign [class="^Firefox$"]  1
assign [class="^Steam"] 2

# window rules
for_window [instance="scratch"] floating enable
for_window [class="^Dialog"] floating enable
for_window [instance=".*Properties"] floating enable
for_window [title="World"] floating enable
for_window [title="World"] move position center

# resize window (you can also use the mouse for that)
set $resize "resize"
mode $resize {
    bindsym d resize grow left 10 px
    bindsym h resize grow down 10 px
    bindsym t resize grow up 10 px
    bindsym n resize grow right 10 px

    bindsym Shift+n resize shrink left 10 px
    bindsym Shift+t resize shrink down 10 px
    bindsym Shift+h resize shrink up 10 px
    bindsym Shift+d resize shrink right 10 px

        bindsym Escape mode "default"
        bindsym Return mode "default"
}
bindsym $alt+r mode $resize

set $move "move window"
mode $move {
    
    bindsym d move left                
    bindsym h move down                
    bindsym t move up                
    bindsym n move right                
    
    # toggle tiling / floating
    bindsym p floating toggle

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $alt+m mode $move

set $locker /home/niels/bin/lock && sleep 1

set $meta "[s]uspend, [h]ibernate, [l]ock, [k]ill X, res[t]art i3, [e]dit config, [r]eload config"
mode $meta {

    bindsym s exec --no-startup-id xautolock -locknow, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym l exec --no-startup-id $locker, mode "default"
    bindsym k exec --no-startup-id i3-msg exit, mode "default"
    bindsym t exec --no-startup-id i3-msg restart; mode "default"
    bindsym e exec gvim ~/.config/i3/config; mode "default"
    bindsym r exec --no-startup-id i3-msg reload; mode "default"

    bindsym $alt+Shift+greater mode $launch

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $alt+Shift+less mode $meta


# Start i3bar to display a workspace bar (plus the system information i3status
