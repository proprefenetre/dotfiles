set $browser chromium

# Use Mouse+$alt to drag floating windows to their wanted position
floating_modifier $alt

# launching
set $term urxvtc -tr -sh 40
bindsym $alt+Return exec --no-startup-id $term
bindsym $alt+Shift+Return exec --no-startup-id xterm
bindsym $win+Return exec --no-startup-id gvim
bindsym $alt+Shift+u exec --no-startup-id $term -name scratch
bindsym $win+apostrophe exec --no-startup-id ~/bin/snippy
bindsym $win+comma exec --no-startup-id ~/bin/passmenu
bindsym $alt+Shift+greater exec --no-startup-id rofi -show run

# stuff
# bindsym $alt+u border toggle
bindsym $alt+g exec --no-startup-id /home/niels/bin/space

# take a screenshot
bindsym $alt+shift+d exec --no-startup-id scrot -e 'mv $f ~/files/'

# adjust brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 && kill -s RTMIN+2 $(pgrep i3blocks)
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5 && kill -s RTMIN+2 $(pgrep i3blocks)

# kill focused window
bindsym $alt+Shift+c kill

# change focus
bindsym $alt+d focus left
bindsym $alt+h focus down
bindsym $alt+t focus up
bindsym $alt+n focus right

bindsym $alt+b focus mode_toggle

bindsym $alt+p focus parent
bindsym $alt+Shift+p focus child

bindsym $alt+w focus output left

bindsym $alt+Tab exec ~/bin/focus-last.py --switch
# bindsym $alt+Tab exec ~/bin/i3-cycle.py -f
# bindsym $alt+Shift+Tab exec ~/bin/i3-cycle.py -b


# split in horizontal orientation
bindsym $alt+Shift+h split h

# split in vertical orientation
bindsym $alt+Shift+v split v

# enter fullscreen mode for the focused container
bindsym $alt+y fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $alt+apostrophe layout stacking
bindsym $alt+comma layout tabbed
bindsym $alt+period layout toggle split

# change between tiling / floating windows
bindsym $alt+Shift+space floating toggle

# switch to workspace
bindsym $alt+0 $ws0
bindsym $alt+1 $ws1
bindsym $alt+2 $ws2
bindsym $alt+3 $ws3
bindsym $alt+4 $ws4
bindsym $alt+5 $ws5
bindsym $alt+6 $ws6
