bar {
    status_command i3blocks
    position top
    font pango:Hack Regular, icons 8
    colors {
        background #1c1c1c
        focused_workspace #0c8346 #0d5d56 #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #712B31 #5D0D14 #ffffff

    }
}

