#! /bin/sh

# desktops are added by mhead
# bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width         1
bspc config window_gap           3

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config external_rules_command "/home/niels/dotfiles/bspwm/external_rules"

bspc rule -a Navigator desktop='I'
bspc desktop I --layout monocle
bspc rule -a mpv state=floating
bspc rule -a scratchterm sticky=on state=floating hidden=on
bspc rule -a Emacs state=tiled
bspc rule -a Zathura state=tiled

/home/niels/dotfiles/bspwm/panel &
/home/niels/dotfiles/bspwm/scratchmacs &
/home/niels/dotfiles/bspwm/scratchterm &
