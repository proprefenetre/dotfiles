#! /bin/sh

# config
bspc config border_width         1
bspc config window_gap           3

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config external_rules_command "/home/niels/dotfiles/bspwm/external_rules"

bspc config automatic_scheme spiral
bspc single_monocle true

# rules
bspc rule -a "Firefox Developer Edition" desktop='^1'
bspc rule -a mpv state=floating
bspc rule -a scratchterm sticky=on state=floating hidden=on center=on rectangle=809x500+278+134
bspc rule -a Emacs state=tiled
bspc rule -a Zathura state=tiled

bspc desktop ^1 --layout monocle

# scripts
/home/niels/dotfiles/bspwm/panel &
/home/niels/dotfiles/bspwm/scratchmacs &
/home/niels/dotfiles/bspwm/scratchterm &
